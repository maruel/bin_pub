[extensions]
color =
mq =
pager =

[diff]
git = 1

[pager]
pager = less -FRSXQ
quiet = True
attend = diff,status,log,qdiff,blame,annotate,pdiff,glog

[merge-tools]
vimdiff.executable = vim
#vimdiff.args = -d $base $local $output $other +close +close
vimdiff.args = -d $base $local $output $other -c "wincmd J"

[ui]
verbose = True
merge = vimdiff
