# Installation:
#  sudo cp sudoreboot /etc/sudoers.d/

# For a group:
#%admin ALL = NOPASSWD: /sbin/shutdown
# For a user:
#foo ALL = NOPASSWD: /sbin/shutdown

# Allow all users to reboot.
%users ALL=NOPASSWD:/sbin/reboot
%users ALL=NOPASSWD:/sbin/shutdown
